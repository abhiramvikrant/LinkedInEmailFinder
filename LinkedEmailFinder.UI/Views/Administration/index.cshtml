@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Role List";
}

<h4>Role List</h4>

<p>
    <a asp-action="CreateRole" class="btn btn-outline-info">Create New Role</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>ID</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Name</td>
            <td>@item.Id</td>
            <td>

                <a asp-controller="administration" asp-action="ListUsersInRole" asp-route-roleid ="@item.Id" class="btn btn-light">Add / Remove Users</a>&nbsp;
                
            </td>
        </tr>
}
    </tbody>
</table>
